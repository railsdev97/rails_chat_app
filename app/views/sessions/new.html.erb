<div class="d-flex justify-content-center bg-light" style="min-height:inherit;">
  <div class="card my-5" style="width:35rem; height:380px">
    <div class="card-body px-4">
      <div class="text-center mb-4">
        <i class="bi bi-chat-dots text-info me-2" style="font-size:50px"></i>
        <span class="h5">Login to ChatApp</span>
      </div>

      <%= form_with scope: :session, url: login_path do |form| %>
        <div class="input-group flex-nowrap mb-4">
          <span class="input-group-text" id="addon-wrapping"><i class="bi bi-person-fill fs-5"></i></span>
          <%= form.text_field :username, class: "form-control p-2 w-75", placeholder: "Enter your username", required: true %>
        </div>

        <div class="input-group flex-nowrap">
          <span class="input-group-text" id="addon-wrapping"><i class="bi bi-key-fill fs-5"></i></span>
          <%= form.password_field :password, class: "form-control p-2 w-75", placeholder: "Enter your password", required: true %>
        </div>

        <div class="actions mt-5 mb-2">
          <%= form.submit "Log in", class: "btn btn-primary w-100 p-2" %>
        </div>
        <div class="text-center">
          <span>Don't have an account? </span>
          <%= link_to "Register now", root_path, class:"text-decoration-none text-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>



